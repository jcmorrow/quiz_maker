%h1= @quiz.title
%p= @quiz.intro_content
%h2 Outcomes
%table
  -@quiz.outcomes.each do |outcome|
    %tr
      %td= outcome.name
      %td= link_to "Edit Outcome", edit_outcome_path(outcome), class: "small button no-margin"
=link_to "Add Outcome", new_quiz_outcome_path(@quiz.id), class: 'button'
      
%h2 Questions
%table
  -@quiz.questions.each do |question|
    %tr
      %td= question.body
      %td= link_to "Edit Question", edit_question_path(question.id), class: 'small button no-margin'
=link_to "Add Question", new_quiz_question_path(@quiz.id), class: 'button'
