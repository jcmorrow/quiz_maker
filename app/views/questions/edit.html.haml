.panel.clearfix.my2
  %h4= @question.body
  %a.button.float-right.m0{data: {open: "edit-details-modal"}} Edit Details
  #edit-details-modal.reveal.radius{data: { reveal: ""}}
    = @question.errors.inspect
    = render "form"

.panel.clearfix
  -@question.choices.each do |choice|
    .panel.clearfix
      = choice.body
      = link_to "Edit Choice", edit_choice_path(choice), class: 'button small m0 float-right'
  = link_to "Add Choice", new_question_choice_path(@question), class: 'button float-right m0'
